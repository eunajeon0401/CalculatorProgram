<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#050505"
    android:padding="2dp"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:paddingBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.widget.Button
            android:id="@+id/btnNum3"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/round_button"
            android:text="3"
            android:textSize="25sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/btnRemainder"
            app:layout_constraintTop_toBottomOf="@+id/btnRemainder" />

        <android.widget.Button
            android:id="@+id/btnAc"
            android:layout_width="180dp"
            android:layout_height="80dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/round_button2"
            android:text="AC"
            android:textSize="25sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <android.widget.Button
            android:id="@+id/btnRemainder"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="20dp"
            android:background="@drawable/round_button2"
            android:text="%"
            android:textSize="25sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/btnAc"
            app:layout_constraintTop_toTopOf="@+id/btnAc" />

        <android.widget.Button
            android:id="@+id/btnNum1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/round_button"
            android:text="1"
            android:textSize="25sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/btnAc"
            app:layout_constraintTop_toBottomOf="@+id/btnAc" />

        <android.widget.Button
            android:id="@+id/btnNum2"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/round_button"
            android:text="2"
            android:textSize="25sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/btnAc"
            app:layout_constraintTop_toBottomOf="@+id/btnAc" />

        <android.widget.Button
            android:id="@+id/btnNum4"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/round_button"
            android:text="4"
            android:textSize="25sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/btnNum1"
            app:layout_constraintTop_toBottomOf="@+id/btnNum1" />

        <android.widget.Button
            android:id="@+id/btnNum5"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/round_button"
            android:text="5"
            android:textSize="25sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/btnNum2"
            app:layout_constraintTop_toBottomOf="@+id/btnNum2" />

        <android.widget.Button
            android:id="@+id/btnNum7"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/round_button"
            android:text="7"
            android:textSize="25sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/btnNum4"
            app:layout_constraintTop_toBottomOf="@+id/btnNum4" />

        <android.widget.Button
            android:id="@+id/btnNum6"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/round_button"
            android:text="6"
            android:textSize="25sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/btnNum3"
            app:layout_constraintTop_toBottomOf="@+id/btnNum3" />

        <android.widget.Button
            android:id="@+id/btnNum8"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/round_button"
            android:text="8"
            android:textSize="25sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/btnNum5"
            app:layout_constraintTop_toBottomOf="@+id/btnNum5" />

        <android.widget.Button
            android:id="@+id/btnNum9"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/round_button"
            android:text="9"
            android:textSize="25sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/btnNum6"
            app:layout_constraintTop_toBottomOf="@+id/btnNum6" />

        <android.widget.Button
            android:id="@+id/btnAdd"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/round_button3"
            android:text="+"
            android:textSize="25sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/btnMinus"
            app:layout_constraintTop_toBottomOf="@+id/btnMinus" />

        <android.widget.Button
            android:id="@+id/btnNum0"
            android:layout_width="180dp"
            android:layout_height="80dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/round_button"
            android:text="0"
            android:textSize="25sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/btnNum7"
            app:layout_constraintTop_toBottomOf="@+id/btnNum7" />

        <android.widget.Button
            android:id="@+id/btndot"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/round_button"
            android:text="."
            android:textSize="25sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/btnNum9"
            app:layout_constraintTop_toBottomOf="@+id/btnNum9" />

        <android.widget.Button
            android:id="@+id/btnResult"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/round_button3"
            android:text="="
            app:layout_constraintStart_toStartOf="@+id/btnAdd"
            app:layout_constraintTop_toBottomOf="@+id/btnAdd" />

        <android.widget.Button
            android:id="@+id/btnMinus"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/round_button3"
            android:text="ã…¡"
            android:textSize="25sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/btnMultiple"
            app:layout_constraintTop_toBottomOf="@+id/btnMultiple" />

        <android.widget.Button
            android:id="@+id/btnSlush"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="20dp"
            android:background="@drawable/round_button3"
            android:text="/"
            android:textSize="25sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/btnRemainder"
            app:layout_constraintTop_toTopOf="@+id/btnRemainder" />

        <android.widget.Button
            android:id="@+id/btnMultiple"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/round_button3"
            android:text="X"
            android:textSize="25sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/btnSlush"
            app:layout_constraintTop_toBottomOf="@+id/btnSlush" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/tvOutput"
        android:layout_width="410dp"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:textColor="#FFFFFF"
        android:textSize="35sp"
        app:layout_constraintBottom_toTopOf="@+id/edtInput"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edtInput"
        android:layout_width="410dp"
        android:layout_height="100dp"
        android:ems="10"
        android:gravity="end"
        android:inputType="number"
        android:textColor="#FFFFFF"
        android:textSize="80sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/constraintLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>